<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.tic_tac_toe.MainActivity">

    <TextView
        android:id="@+id/button1"
        android:onClick="click1"
        android:text="-"
        android:textSize="100sp"
        android:typeface="monospace"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_toLeftOf="@+id/button5"/>

    <TextView
        android:id="@+id/button2"
        android:onClick="click2"
        android:text="-"
        android:textSize="100sp"
        android:typeface="monospace"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button5"/>

    <TextView
        android:id="@+id/button3"
        android:onClick="click3"
        android:text="-"
        android:textSize="100sp"
        android:typeface="monospace"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@+id/button5"/>

    <TextView
        android:id="@+id/button4"
        android:onClick="click4"
        android:text="-"
        android:textSize="100sp"
        android:typeface="monospace"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button5"
        android:layout_toLeftOf="@+id/button5"/>

    <TextView
        android:id="@+id/button5"
        android:onClick="click5"
        android:text="-"
        android:textSize="100sp"
        android:typeface="monospace"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/button6"
        android:onClick="click6"
        android:text="-"
        android:textSize="100sp"
        android:typeface="monospace"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button5"
        android:layout_toRightOf="@+id/button5"/>

    <TextView
        android:id="@+id/button7"
        android:onClick="click7"
        android:text="-"
        android:textSize="100sp"
        android:typeface="monospace"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_toLeftOf="@+id/button5"/>

    <TextView
        android:id="@+id/button8"
        android:onClick="click8"
        android:text="-"
        android:textSize="100sp"
        android:typeface="monospace"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_alignRight="@+id/button5"/>

    <TextView
        android:id="@+id/button9"
        android:onClick="click9"
        android:text="-"
        android:textSize="100sp"
        android:typeface="monospace"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button5"/>

    <TextView
        android:id="@+id/turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It is _'s Turn!"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/reset"
        android:onClick="resetGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset the game"
        android:textSize="20dp"
        android:layout_alignParentBottom="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#000000"
        android:layout_above="@+id/button5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#000000"
        android:layout_below="@+id/button5"/>

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_toLeftOf="@+id/button5"
        android:layout_below="@+id/turn"
        android:layout_above="@+id/reset"/>

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_toRightOf="@+id/button5"
        android:layout_below="@+id/turn"
        android:layout_above="@+id/reset"/>

</RelativeLayout>
